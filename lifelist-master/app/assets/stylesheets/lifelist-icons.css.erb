[class^="icon-"]:before,
[class*=" icon-"]:before {
  font-family: 'lifelist-icons';
  font-style: normal;
  font-weight: normal;
  speak: none;
  display: inline-block;
  text-decoration: inherit;
  width: 1em;
  margin-right: 0.2em;
  text-align: center;
/* opacity .8 */
/* For safety - reset parent styles, that can break glyph codes*/
  font-variant: normal;
  text-transform: none;
/* fix buttons height, for twitter bootstrap */
  line-height: 1em;
/* Animation center compensation - magrins should be symmetric */
/* remove if not needed */
  margin-left: 0.2em;
/* you can be more comfortable with increased icons size */
/* font-size: 120%; */
/* Uncomment for 3D effect */
/* text-shadow: 1px 1px 1px rgba(127, 127, 127, 0.3); */
}

.icon-add:before { content: '\2b'; } /* '+' */
.icon-facebook:before { content: '\66'; } /* 'f' */
.icon-heart:before { content: '\e800'; } /* '' */
.icon-settings:before { content: '\2699'; } /* '⚙' */
.icon-attention:before { content: '\e801'; } /* '' */
.icon-ok:before { content: '\2713'; } /* '✓' */
.icon-help:before { content: '\2753'; } /* '❓' */
.icon-pencil:before { content: '\e068'; } /* '' */
.icon-location:before { content: '\e07a'; } /* '' */
.icon-twitter:before { content: '\f303'; } /* '' */
