@font-face {
  font-family: 'lifelist-icons';
  src: url("<%= asset_path('lifelist-icons.eot') %>");
  src: url("<%= asset_path('lifelist-icons.eot') + '#iefix' %>") format('embedded-opentype'), url("<%= asset_path('lifelist-icons.woff') %>") format('woff'), url("<%= asset_path('lifelist-icons.ttf') %>") format('truetype'), url("<%= asset_path('lifelist-icons.svg') + '#lifelist-icons' %>") format('svg');
  font-weight: normal;
  font-style: normal;
}
/* Chrome hack: SVG is rendered more smooth in Windozze. 100% magic, uncomment if you need it. */
/* Note, that will break hinting! In other OS-es font will be not as sharp as it could be */
