= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'well form-search' }) do |f|
  = devise_error_messages!
  .form-actions
    = f.email_field :email, class: 'input-large', placeholder: 'E-mail Address'
    = f.submit 'Reset Password', class: 'btn btn-block btn-secondary'
    %p.forgot= render "devise/shared/links"
