= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'well form-search' }) do |f|
  = hidden_field_tag :sign_up_token, session[:sign_up_token] if session[:sign_up_token].present?
  .oauth
    = link_to omniauth_authorize_path(:user, :facebook), class: 'btn btn-facebook btn-block' do
      %i.icon-facebook
      Sign up with Facebook
  %p Or
  = devise_error_messages!
  .form-actions
    = f.email_field :email, class: 'input-large', placeholder: 'Email'
    = f.password_field :password, class: 'input-large', placeholder: 'Password'
    = f.submit "Sign up", class: 'btn btn-secondary btn-block'
    %p.forgot= render "devise/shared/links"
